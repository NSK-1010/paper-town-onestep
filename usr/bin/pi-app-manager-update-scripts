#!/usr/bin/env bash

set -eu

# OS情報を取得
source /etc/os-release
# VERSION_CODENAME=focal

# アップデートするリポジトリ
git_username="NSK-1010"
git_reponame="paper-town-onestep-scripts-${VERSION_CODENAME}"

# バージョン情報の取得
version=$(curl -s https://api.github.com/repos/${git_username}/${git_reponame}/releases/latest | jq '.tag_name')
version=${version::-1}
version=${version:2}

# ダウンロードするURL
url="https://serenelinux.com/redirect/softwares/${VERSION_CODENAME}"

# 展開先
extract_dir="/etc/paper-town-onestep/softwares"

# 一時保存先
download_path="/tmp/download/softwares.tar.gz"

# 設定した値の整形
extract_dir=${extract_dir%/}

# ディレクトリ作成
if [[ ! -d $extract_dir ]]; then
    mkdir -p $extract_dir
fi

# ダウンロード
curl -Ls -o $download_path --create-dirs $url

# 古いファイルを削除
rm -f $extract_dir/*

# 展開
tar -zxvf "$download_path" -C $(dirname ${download_path}) > /dev/null

# 移動

mv $(dirname ${download_path})/paper-town-onestep-scripts-${VERSION_CODENAME}-${version}/* $extract_dir
rm $extract_dir/README.md

# ダウンロードした一時ファイルを削除
rm -f $download_path
rm -rf $(dirname ${download_path})/paper-town-onestep-scripts-${VERSION_CODENAME}-${version}/

if [[ -z $(ls ${extract_dir} 2> /dev/null) ]]; then
    echo "Failed to update." >&2
    exit 1
else
    exit 0
fi
